<% if node['apache3']['port'] != 80 -%>
    Listen <%= node['apache3']['port'] %>
<% end -%>
<VirtualHost *:<%= node['apache3']['port'] %>>
 ServerAdmin root@localhost
 DocumentRoot <%= node['apache3']['document_root'] %>
 
 <Directory />
  Options FollowSymLinks
  AllowOverride None
 </Directory>
 
 <Directory <%= node['apache3']['document_root'] %>>
  Options Indexes FollowSymLinks MultiViews
  AllowOverride None
  Order allow,deny
  allow from all
 </Directory>
</VirtualHost>