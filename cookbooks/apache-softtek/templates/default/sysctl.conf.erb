# Kernel sysctl configuration file for Red Hat Linux
#
# For binary values, 0 is disabled, 1 is enabled.  See sysctl(8) and
# sysctl.conf(5) for more details.

# Controls IP packet forwarding
net.ipv4.ip_forward = <%= node['apache3']['net.ipv4.ip_forward'] %>

# Controls source route verification
net.ipv4.conf.default.rp_filter = <%= node['apache3']['net.ipv4.conf.default.rp_filter'] %>

# Do not accept source routing
net.ipv4.conf.default.accept_source_route = <%= node['apache3']['net.ipv4.conf.default.accept_source_route'] %>

# Controls the System Request debugging functionality of the kernel
kernel.sysrq = 0

# Controls whether core dumps will append the PID to the core filename.
# Useful for debugging multi-threaded applications.
kernel.core_uses_pid = 1

# Controls the use of TCP syncookies
net.ipv4.tcp_syncookies = <%= node['apache3']['net.ipv4.tcp_syncookies'] %>
net.ipv4.tcp_max_syn_backlog = <%= node['apache3']['net.ipv4.tcp_max_syn_backlog'] %>

# Disable netfilter on bridges.
#net.bridge.bridge-nf-call-ip6tables = 0
#net.bridge.bridge-nf-call-iptables = 0
#net.bridge.bridge-nf-call-arptables = 0

# Controls the default maxmimum size of a mesage queue
kernel.msgmnb = 65536

# Controls the maximum size of a message, in bytes
kernel.msgmax = 65536

# Controls the maximum shared segment size, in bytes
kernel.shmmax = 68719476736

# Controls the maximum number of shared memory segments, in pages
kernel.shmall = 4294967296

# IPv4 Security tuning
# Send redirects, if router, but this is just server
net.ipv4.conf.all.send_redirects = <%= node['apache3']['net.ipv4.conf.all.send_redirects'] %>
net.ipv4.conf.default.send_redirects = <%= node['apache3']['net.ipv4.conf.default.send_redirects'] %>

# Accept packets with SRR option?
net.ipv4.conf.all.accept_source_route = <%= node['apache3']['net.ipv4.conf.all.accept_source_route'] %>

# Accept Redirects? No, this is not router
net.ipv4.conf.all.accept_redirects = <%= node['apache3']['net.ipv4.conf.all.accept_redirects'] %>
net.ipv4.conf.all.secure_redirects = <%= node['apache3']['net.ipv4.conf.all.secure_redirects'] %>

# Log packets with impossible addresses to kernel log? yes
net.ipv4.conf.all.log_martians = <%= node['apache3']['net.ipv4.conf.all.log_martians'] %>
net.ipv4.conf.default.accept_source_route = <%= node['apache3']['net.ipv4.conf.default.accept_source_route'] %>
net.ipv4.conf.default.accept_redirects = <%= node['apache3']['net.ipv4.conf.default.accept_redirects'] %>
net.ipv4.conf.default.secure_redirects = <%= node['apache3']['net.ipv4.conf.default.secure_redirects'] %>

# Ignore all broadcast/multicast ICMP ECHO and TIMESTAMP
net.ipv4.icmp_echo_ignore_broadcasts = <%= node['apache3']['net.ipv4.icmp_echo_ignore_broadcasts'] %>

# Enable source validation by reversed path
net.ipv4.conf.all.rp_filter = <%= node['apache3']['net.ipv4.conf.all.rp_filter'] %>